.widget-wrap
  margin-bottom: block-margin !important
  @media mq-normal
    column(main-column)

.widget-title
  color: #ccc
  text-transform: uppercase
  letter-spacing: 2px
  margin-bottom: .5em
  line-height: 1em
  font-weight: bold
  &:before
    font-family: font-icon
    font-weight: normal
    margin-right: 4px

.widget-title.archive
  &:before
    content: "\f187"

.widget-title.category
  &:before
    content: "\f00b"

.widget-title.profile
  &:before
    content: "\f2be"

.widget-title.recent
  &:before
    content: "\f017"

.widget-title.tag
  &:before
    content: "\f02c"

.widget-title.tagcloud
  &:before
    content: "\f0c2"

.widget
  color: color-grey
  ul, ol
    li
      display: inline-block
      zoom:1
      *display:inline
      padding-right: .75em
/* Having problems getting balanced white space between items
    li:before
      content: " | "
    li:first-child:before
      content: none
 */

.widget.profile img
  border-radius: 6px
  display: block
  height: auto
  width: auto
  max-height: 100%
  max-width: 100%
  margin-bottom: 12px

.widget.profile strong
  color: color-default
  font-size: 24px

.widget.profile code
  font-family: font-mono

$widget-profile-link
  color: #999 !important
  &:before
    font-size: 20px
    font-family: font-icon
    font-weight: normal
    text-align: center
  &:hover
    color: #fff !important
    text-decoration: none !important

.widget-profile-link-twitter
  @extend $widget-profile-link
  &:before
    content: "\f099"
  &:hover
    color: #55acee !important

.widget-profile-link-github
  @extend $widget-profile-link
  &:before
    content: "\f09b"
  &:hover
    color: #333 !important
